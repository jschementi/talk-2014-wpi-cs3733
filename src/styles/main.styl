@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

.me
  background-image url(../images/me.png)
  background-size contain
  width 4em
  height 4em
  border-radius 2em

.me-graduate.bespoke-backdrop-active
  background-image url(../images/me-graduate.jpg)
  background-size cover
  opacity 1

.me-microsoft-badge.bespoke-backdrop-active
  background-image url(../images/me-microsoft-badge.jpg)
  background-size contain
  background-repeat no-repeat
  opacity 1

.moven-homepage.bespoke-backdrop-active
  background-image url(../images/moven-homepage.png)
  background-size contain
  background-repeat no-repeat
  opacity 1

.light-bg.bespoke-backdrop-active
  background-color white
  opacity 1
.light-bg
  color #333 !important

.year-range
  color: #aaa;
  font-size: 0.75em;
  float: right;
  margin-left: 1em;
  line-height: 2em;

.tiny-code
  code[class*="language-"], pre[class*="language-"]
    font-size 0.8em
    line-height 1
